{
  "id": "Soldier",
  "description": "SoldierUnitStateMachine",
  "initial": "Idle",
  "states": {
    "Idle": {
      "description": "Avoidance",
      "on": {
        "Move": {
          "target": "Move",
          "description": "whenever velocity > 0 or is not at destination"
        },
        "Attack": {
          "target": "Attack",
          "description": "Triggered when Soldier.attackUnit() function is invoked in stateManager"
        },
        "PlayerAttacked": {
          "target": "Defend"
        },
        "DefendAllyUnit": {
          "target": "Attack"
        }
      }
    },
    "Move": {
      "description": "Steer and Avoidance",
      "on": {
        "ReachedPosition": {
          "target": "Idle"
        },
        "Attack": {
          "target": "Attack",
          "description": "Triggered when Soldier.attackUnit() function is invoked in stateManager."
        },
        "PlayerAttacked": {
          "target": "Defend",
          "description": "Called when attacker invokes defender's attackMe() method. We can be sure that whenever this event is fired, both attacker and defender has their target unit set."
        }
      }
    },
    "Attack": {
      "on": {
        "TargetNotInRange": {
          "target": "ChaseTarget"
        },
        "TargetLost": {
          "target": "FindTarget"
        },
        "Move": {
          "target": "Move",
          "description": "triggered by Soldier.setTargetPosition()"
        },
        "TargetKilled": {
          "target": "FindTarget"
        }
      }
    },
    "FindTarget": {
      "on": {
        "TargetFound": {
          "target": "Attack"
        },
        "TargetNotFound": {
          "target": "Idle"
        }
      }
    },
    "ChaseTarget": {
      "description": "Steer and Avoidance",
      "on": {
        "TargetInRange": {
          "target": "Attack"
        },
        "TargetLost": {
          "target": "FindTarget",
          "description": "This is different from \"TargetNotInRange\" in the sense that the attacker has completely lost its attack target during chase itself (when reference is set to null for example)"
        },
        "Move": {
          "target": "Move",
          "description": "When user wants to cancel attack and force-move unit to specific position"
        }
      }
    },
    "Defend": {
      "on": {
        "AttackerUnitNearby": {
          "target": "Attack"
        },
        "NoAttackerUnitNearby": {
          "target": "Idle"
        }
      }
    }
  }
}